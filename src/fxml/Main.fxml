   <top>
      <HBox alignment="CENTER" fillHeight="false" minWidth="50.0" prefWidth="50.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="combo" onAction="#eleccionComboBox" prefWidth="120.0" HBox.hgrow="SOMETIMES" />
            <TextField fx:id="textField" minWidth="50.0" onAction="#generarTablaGenerica" HBox.hgrow="SOMETIMES" />
            <Button mnemonicParsing="false" text="+" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
